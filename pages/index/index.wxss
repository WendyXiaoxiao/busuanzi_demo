/* 整页容器 */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(180deg, #f9e7c2 0%, #e2c9a0 100%);
}

/* 背景图 */
.bg-image {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 半透明遮罩 */
.overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* 半透明卡片 */
.card {
  position: relative;
  z-index: 2;
  width: 92%;
  max-width: 650rpx;
  margin: 0 auto;
  padding: 36rpx 24rpx 24rpx 24rpx;
  background: rgba(255, 250, 240, 0.95);
  backdrop-filter: blur(18px);
  border-radius: 28rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.13);
  top: 20rpx;
}

/* 标题区域 */
.title-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.title-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-family: "STKaiti", "KaiTi";
  color: #4a2f0f;
}

/* 示例问题区 */
.examples-section {
  margin-bottom: 36rpx;
}

.examples-title {
  font-size: 28rpx;
  color: #7a5a2f;
  margin-bottom: 18rpx;
  font-weight: bold;
}

.examples-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.example-item {
  padding: 14rpx 32rpx;
  background: rgba(181, 140, 96, 0.13);
  border: 1rpx solid #e2c9a0;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #5a3f1d;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(181,140,96,0.08);
  transition: all 0.2s;
}

.example-item:active {
  background: #e2c9a0;
  color: #fff;
  transform: scale(0.97);
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, #e2c9a0 0%, #fff 100%);
  margin: 32rpx 0 36rpx 0;
  opacity: 0.5;
}

/* 输入区域 */
.input-section {
  margin-bottom: 38rpx;
  min-height: 120rpx;
  background: rgba(255,255,255,0.92);
  border: 1rpx solid #d2b48c;
  border-radius: 16rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

/* 输入框紧凑模式 */
.input-section.compact {
  min-height: 80rpx;
}

.question-input {
  width: 100%;
  height: 80rpx;
  padding: 18rpx 18rpx;
  font-size: 30rpx;
  border: none;
  outline: none;
  background: transparent;
  color: #333;
  box-sizing: border-box;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 38rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: "STKaiti", "KaiTi";
  font-weight: bold;
  background: linear-gradient(90deg, #d8b384 0%, #b58c60 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(181, 140, 96, 0.18);
  transition: all 0.3s ease;
}

.submit-btn.loading {
  background: linear-gradient(90deg, #b58c60 0%, #d8b384 100%);
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 签文卡片 */
.result-card {
  position: relative;
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(181, 140, 96, 0.5);
  border-radius: 16rpx;
  animation: fadeIn 0.5s ease;
}

/* 装饰元素 */
.result-decoration {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  z-index: 3;
}

.top-left { top: -10rpx; left: -10rpx; }
.top-right { top: -10rpx; right: -10rpx; }
.bottom-left { bottom: -10rpx; left: -10rpx; }
.bottom-right { bottom: -10rpx; right: -10rpx; }

/* 签文文字 */
.result-text {
  display: block;
  font-size: 32rpx;
  font-family: "STKaiti", "KaiTi";
  color: #5a3f1d;
  text-align: center;
  line-height: 1.6;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.share-btn-section {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
  margin-bottom: 0;
}
.share-btn {
  width: 220rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #d8b384 0%, #b58c60 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  font-family: "STKaiti", "KaiTi";
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(181, 140, 96, 0.13);
}
