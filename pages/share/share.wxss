.share-container {
  min-height: 100vh;
  background: #f9f5e6;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  box-sizing: border-box;
}

.share-canvas {
  position: absolute;
  left: -9999px;
}

.share-preview {
  margin: 0 auto;
  box-shadow: 0 8rpx 32rpx rgba(181,140,96,0.13);
  border-radius: 20rpx;
  overflow: hidden;
  background: #fff;
}

.share-image {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.share-btns {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  justify-content: center;
  margin: 32rpx 0 0 0;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.gen-btn,
.save-btn {
  flex: 1;
  max-width: 260rpx;
  min-width: 120rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #d8b384 0%, #b58c60 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  font-family: "STKaiti", "KaiTi";
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(181, 140, 96, 0.13);
  display: flex;
  align-items: center;
  justify-content: center;
}
